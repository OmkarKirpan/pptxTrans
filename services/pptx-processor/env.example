# PPTX Processor Service Configuration

# Server Configuration
API_ENV=development
API_PORT=8000
API_HOST=0.0.0.0
LOG_LEVEL=INFO

# LibreOffice Configuration
LIBREOFFICE_PATH=/usr/bin/soffice
LIBREOFFICE_TIMEOUT=300

# Processing Configuration
TEMP_UPLOAD_DIR=/tmp/uploads
TEMP_PROCESSING_DIR=/tmp/processing
MAX_FILE_SIZE_MB=50
CONCURRENT_PROCESSING=4

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_STORAGE_BUCKET_SLIDES=slide-visuals
SUPABASE_STORAGE_BUCKET_RESULTS=processing-results

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_THUMBNAIL_GENERATION=true
ENABLE_TEXT_SEGMENTATION=true
ENABLE_TRANSLATION_HINTS=true 